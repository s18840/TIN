<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista Klientów</h2>

        <table class="table-list">

            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Numer telefonu</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
                <% for (let Klient of Klients) { %>
                    <tr>
                        <td>
                            <%= Klient.firstName %>
                        </td>
                        <td>
                            <%= Klient.lastName %>
                        </td>
                        <td>
                            <%= Klient.numerTelefonu %>
                        </td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/Klient/details/<%=Klient._id%>"
                                        class="list-actions-button-details">Szczegóły</a>
                                </li>
                                <li>
                                    <a href="/Klient/edit/<%=Klient._id%>" class="list-actions-button-edit">Edytuj</a>
                                </li>
                                <li>
                                    <a href="/Klient/delete/<%=Klient._id%>" class="list-actions-button-delete">Usuń</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

        </table>

        <p><a href="/Klient/add" class="button-add">Dodaj nowego klienta</a></p>

    </main>

    <%- include('../../fragments/footer.ejs') %>